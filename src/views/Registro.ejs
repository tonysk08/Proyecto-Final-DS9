<%- include ('template/_header')%>
<script src="..\js\validar.js"></script>

<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h3 class="card-title text-center">Registro</h3>
            <hr class="my-4">
            <form action="/registro" method="POST" class="form-signin">
              <div class="form-label-group">
                <label for="name">Nombre</label>
                <input type="text" id="name" name="nombre" class="form-control"  required autofocus>
              </div>

              <div class="form-label-group">
                <label for="name">Apellido</label>
                <input type="text" id="lastname" name="lastname" class="form-control" required>
              </div>

              <div class="form-label-group">
                <label for="cedula">Cédula</label>
                <input type="text" id="cedula" name="cedula" class="form-control" required >
              </div>

              <div class="form-label-group">
                <label for="fecha">Fecha de Nacimiento</label>
                <input type="date" id="fecha" name="fecha" class="form-control" required>
              </div>

              <div class="form-label-group">
                <label for="email">Correo Electrónico</label>
                <input type="email" id="email" name="email" class="form-control" required>
              </div>

              <div class="form-label-group">
                <label for="telefono">Teléfono</label>
                <input type="text" id="telefono" name="telefono" class="form-control" placeholder="000-0000">
              </div>
              <!--
              <div class="form-label-group">
                <label for="celular">Celular</label>
                <input type="text" id="celular" name="celular" class="form-control" placeholder="0000-0000">
              </div>
              -->
              <div class="form-label-group" title="Mínimo 8 caracteres
Máximo 15 caracteres
Al menos una letra mayúscula
Al menos una letra minúscula
Al menos un dígito
No espacios en blanco
Al menos 1 caracter especial">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password"class="form-control" required>
              </div>

              <div class="form-label-group">
                <label for="password">Confirmar contraseña</label>
                <input type="password" id="rpassword" name="rpassword" class="form-control" required><br>
              </div>

              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Registrar</button>
              <div style="text-align:center">
                <a class="text-darkyellow text-center" href="/login">¿Ya tienes una cuenta? Inicia Sesión</a>
              </div>
              
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include ('template/_footer')%>