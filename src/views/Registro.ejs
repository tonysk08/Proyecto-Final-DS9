<%- include ('template/_header')%>
<script src="..\js\validar.js"></script>

<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h3 class="card-title text-center">Registro</h3>
            <hr class="my-4">
            <form action="js\registrar.js" method="POST" class="form-signin" onsubmit="return validar();">
              <div class="form-label-group">
                <label for="name">Nombre</label>
                <input type="text" id="name" class="form-control"  required autofocus>
              </div>

              <div class="form-label-group">
                <label for="name">Apellido</label>
                <input type="text" id="lastname" class="form-control" required>
              </div>

              <div class="form-label-group">
                <label for="cedula">Cédula</label>
                <input type="text" id="cedula" class="form-control" required >
              </div>

              <div class="form-label-group">
                <label for="fecha">Fecha de Nacimiento</label>
                <input type="date" id="fecha" class="form-control" required>
              </div>

              <div class="form-label-group">
                <label for="email">Correo Electrónico</label>
                <input type="email" id="email" class="form-control" required>
              </div>

              <div class="form-label-group">
                <label for="telefono">Teléfono</label>
                <input type="text" id="telefono" class="form-control" placeholder="000-0000">
              </div>

              <div class="form-label-group">
                <label for="telefono">Celular</label>
                <input type="text" id="celular" class="form-control" placeholder="0000-0000">
              </div>

              <div class="form-label-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" class="form-control" required placeholder="Debe contener un mínimo de 8 caracteres">
              </div>

              <div class="form-label-group">
                <label for="password">Confirmar contraseña</label>
                <input type="password" id="rpassword" class="form-control" required><br>
              </div>

              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Registrar</button>
              <div style="text-align:center">
                <a class="text-darkyellow text-center" href="/login">¿Ya tienes una cuenta? Inicia Sesión</a>
              </div>
              
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include ('template/_footer')%>